{
  "name": "css-frameworks-ca",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "npx prettier --write .",
    "lint": "npx eslint index.js src/**/*.js --cache --fix",
    "prepare": "husky install",
    "test": "npx jest",
    "test-mode": "npx jest --watchAll",
    "test-e2e": "npx cypress open --e2e -b electron",
    "test-cy": "npx cypress run --spec 'cypress/e2e/3-testing/**/*'"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "cypress": "^13.15.0",
    "eslint": "^9.12.0",
    "eslint-plugin-cypress": "^4.0.0",
    "eslint-plugin-jest": "^28.8.3",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "prettier": "^3.3.3",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": "eslint index.js src/**/*.js --fix",
    "*.{js,css,md,scss,html}": "prettier --write"
  }
}
